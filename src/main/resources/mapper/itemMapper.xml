<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "ItemMapper">
    <insert id="insertItem" parameterType="item">
        insert into product_table (product_name, product_img1, product_img2, product_description, product_price, category_ID)
        values (#{name}, #{img1}, #{img2}, #{detail}, #{price}, #{categoryId})
    </insert>
    
